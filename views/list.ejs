<%- include("header") -%>


  <div class="box" id="heading" >
    <p> <%= listTitle %> </p>
  </div>

  <div class="box">

    <% newListItems.forEach(function(itemLists){ %>
      <form class="" action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value = "<%=itemLists._id %>" name = "deleteItem" onChange="this.form.submit()" >
          <p> <%= itemLists.list %> </p>
        </div>
        <input type="hidden" name="listTitle" value="<%= listTitle %>"> </input>
        <input type="hidden" name="todo" value="<%= itemLists %>"> </input>
      </form>

    <% })%>

      <form class="item" action="/todoPage" method="post">
        <input type="text" name="newList" placeholder="Enter Item" autocomplete="off">
        <button type="submit" name="list" value = "<%=listTitle %>">+</button>
      </form>
  </div>



<%- include("footer") -%>
